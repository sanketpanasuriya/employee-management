<div class="container">
  <h1>Employees</h1>
  <%= link_to 'New Employee', new_employee_path, class: "btn btn-primary mb-3" %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Salary</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.department %></td>
          <td><%= employee.salary %></td>
          <td><%= link_to 'Show', employee, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
